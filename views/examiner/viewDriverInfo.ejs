<!DOCTYPE html>
<html lang="en">
  <%- include('../layout/head.ejs') %>

  <body>
    <!-- navigation -->
    <%- include('../layout/navigation.ejs') %>

    <!-- message -->
    <%- include('../components/message.ejs', message) %>

    <main
      class="d-flex justify-content-center p-5 flex-column align-items-center"
    >
      <h1 class="mt-3 mb-5">Driver Information</h1>
      <form
        class="needs-validation col-md-6 d-flex justify-content-center flex-column"
        action="/examiner/examinerEvaluate"
        method="post"
      >
        <!-- Full Name -->
        <div class="form-row">
          <div class="col-md-6 mb-3">
            <label for="FirstName">First name</label>
            <input
              type="text"
              class="form-control"
              id="FirstName"
              name="FirstName"
              placeholder="First name"
              value="<%= user.firstName %>"
              disabled
            />
          </div>
          <div class="col-md-6 mb-3">
            <label for="LastName">Last name</label>
            <input
              type="text"
              class="form-control"
              id="LastName"
              name="LastName"
              placeholder="Last name"
              value="<%= user.lastName %>"
              disabled
            />
          </div>
        </div>

        <hr />

        <div class="form-row">
          <legend class="col-form-label col-md-12 pt-0">Car details</legend>
          <div class="col-md-12 mb-3">
            <div class="col-md-12 mb-3 px-0">
              <label for="ieMake"> ie make </label>
              <input
                class="form-control"
                type="text"
                name="ieMake"
                id="ieMake"
                placeholder="ieMake"
                value="<%= user.car_details.make %>"
                disabled
              />
            </div>
            <div class="col-md-12 mb-3 px-0">
              <label for="model">model</label>
              <input
                class="form-control"
                type="text"
                name="model"
                id="model"
                placeholder="model"
                value="<%= user.car_details.model %>"
                disabled
              />
            </div>
            <div class="col-md-12 mb-3 px-0">
              <label for="year">year </label>
              <input
                class="form-control"
                type="number"
                name="year"
                id="year"
                placeholder="year"
                value="<%= user.car_details.year %>"
                min="0"
                disabled
              />
            </div>

            <div class="col-md-12 mb-3 px-0">
              <label for="platNumber">plat number</label>
              <input
                class="form-control"
                type="text"
                name="platNumber"
                id="platNumber"
                placeholder="0X0-X0X"
                value="<%= user.car_details.platNo %>"
                disabled
              />
            </div>
          </div>
        </div>

        <hr />
        <h1 class="text-center my-3">Exam Result</h1>
        <div class="form-group d-flex flex-row justify-content-around">
          <div class="form-check">
            <input
              class="form-check-input"
              type="radio"
              name="examResult"
              id="Pass"
              value="Pass"
            />
            <label class="form-check-label mt-1" for="Pass"> Pass </label>
          </div>
          <div class="form-check">
            <input
              class="form-check-input"
              type="radio"
              name="examResult"
              id="Fail"
              value="Fail"
            />
            <label class="form-check-label mt-1" for="Fail"> Fail </label>
          </div>
        </div>

        <hr />
        <div class="form-group">
          <label for="exampleFormControlTextarea1">comment</label>
          <textarea
            class="form-control"
            id="examComment"
            name="examComment"
            rows="3"
          ></textarea>
        </div>

        <hr />

        <div class="form-group d-flex flex-column">
          <input type="hidden" value="<%= user.TestType %>" name="TestType" />
          <input type="hidden" value="<%= user._id %>" name="userId" />
          <button
            href="/examiner/AccessExaminerPage"
            class="btn btn-danger mb-3"
          >
            Submit
          </button>

          <a href="/examiner/AccessExaminerPage" class="btn btn-primary"
            >Go Back</a
          >
        </div>
      </form>
    </main>

    <!-- footer -->
    <%- include('../layout/footer.ejs') %>
    <!-- script -->
    <%- include('../layout/end.ejs')%>
  </body>
</html>
