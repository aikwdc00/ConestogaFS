      <% if (user) { %>

      <!-- message -->
      <%- include('../components/message.ejs', message) %>

      <form
        class="needs-validation col-md-6 d-flex justify-content-center flex-column"
        action="/G_TEST_Edit"
        method="post"
      >
        <!-- Full Name -->
        <div class="form-row">
          <div class="col-md-6 mb-3">
            <label for="FirstName">First name</label>
            <input
              type="text"
              class="form-control"
              id="FirstName"
              name="FirstName"
              placeholder="First name"
              value="<%= user.firstName %>"
              disabled
            />
          </div>
          <div class="col-md-6 mb-3">
            <label for="LastName">Last name</label>
            <input
              type="text"
              class="form-control"
              id="LastName"
              name="LastName"
              placeholder="Last name"
              value="<%= user.lastName %>"
              disabled
            />
          </div>
        </div>

        <div class="form-row">
          <div class="col-md-12 mb-3">
            <label for="Age">Age</label>
            <input
              type="number"
              class="form-control"
              id="Age"
              name="Age"
              placeholder="Age"
              min="18"
              max="99"
              value="<%= user.Age %>"
              disabled
            />
          </div>
        </div>

        <hr />

        <div class="form-row">
          <legend class="col-form-label col-md-12 pt-0">Car details</legend>
          <div class="col-md-12 mb-3">
            <div class="col-md-12 mb-3 px-0">
              <label for="ieMake"> ie make </label>
              <input
                class="form-control"
                type="text"
                name="ieMake"
                id="ieMake"
                placeholder="ieMake"
                value="<%= user.car_details.make %>"
              />
            </div>
            <div class="col-md-12 mb-3 px-0">
              <label for="model">model</label>
              <input
                class="form-control"
                type="text"
                name="model"
                id="model"
                placeholder="model"
                value="<%= user.car_details.model %>"
              />
            </div>
            <div class="col-md-12 mb-3 px-0">
              <label for="year">year </label>
              <input
                class="form-control"
                type="number"
                name="year"
                id="year"
                placeholder="year"
                value="<%= user.car_details.year %>"
                min="0"
              />
            </div>

            <div class="col-md-12 mb-3 px-0">
              <label for="platNumber">plat number</label>
              <input
                class="form-control"
                type="text"
                name="platNumber"
                id="platNumber"
                placeholder="0X0-X0X"
                value="<%= user.car_details.platNo %>"
              />
            </div>
          </div>
        </div>

        <hr />
        <input type="hidden" value="<%= appointments %>" class="appointments" />
        <div class="col-12 formItems">
          <label for="confirmPw">Appointment Date</label>
          <input
            type="date"
            class="form-control"
            name="date"
            id="userAppointDate"
            value=""
          />
        </div>

        <div class="col-12 formItems">
          <label for="confirmPw">Appointment slots</label>
          <select
            class="form-control"
            aria-label="Default select example"
            name="time"
            id="userAppointSlots"
          ></select>
        </div>

        <hr />

        <input type="hidden" value="G" name="TestType" />
        <input type="hidden" value="<%= user._id %>" name="userId" />
        <button class="btn btn-primary">Submit form</button>
      </form>

      <% }%>
    </main>

    <!-- footer -->
    <%- include('../layout/footer.ejs') %>
    <!-- script -->
    <%- include('../layout/end.ejs')%>
  </body>
</html>
