    <header>
      <div class="jumbotron justify-content-center bg-dark">
        <h1 class="display-4 text-center text-white font-weight-bold">
          <%= pageTitle %>
        </h1>
        <p class="lead text-center text-white-50">Get a full G license.</p>
      </div>
    </header>

    <main
      class="d-flex justify-content-center py-5 flex-column align-items-center"
    >
